<%- include('partials/header') %>

<div class="container">
 <h1 class="text-success">Your notes</h1>

 <div class="container">
     
    <% if (locals.errors) { %>
        <ul>
            <% Object.values(errors).forEach(function(error){ %>
                 <li class="text-danger"><%= error.msg%></li>
            <% }); %>
        </ul>
        <% } %>

     <form action="notes" method="post">
    <div class="input-group">
  <div class="input-group-prepend">
  </div>
  <input type="text" name="note" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
</div>
<button type="submit" class="btn btn-primary mt-1 mb-3">Add</button>

</form>

      
</div>

 <div class="jumbotron">
    <% if(locals.msg){ %>
        <p class="text-danger">
            No notes found
        </p>
   <% } %>

   <%if(locals.notes){%>
       <%notes.forEach((note)=>{%>
           <ul>
               <li><%=note.note%></li>
           </ul>
       <%})%>
  <% } %>

  
 
 </div>
    

 <form action="/logout" method="post">
    <button type="submit" class="btn btn-secondary">Logout</button>
</form>


</div>

</body>
</html>